{% block title %}Liste des articles{% endblock %}

{% block body %}

    {% for article in  articles%}

        <h2 class="mt-5"><a href="{{ path('', { 'id' : article.id })}}">{{ article.title }}</a></h2>
        <p>{{ article.content|raw }}</p>
    {% endfor %}
    {{ knp_pagination_render(articles) }}

{% endblock %}
